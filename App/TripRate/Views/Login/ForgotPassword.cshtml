@model TripRate.Models.ModelUser

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />

@using (Html.BeginForm())
{
    <body id="mainBody">
        <div id="mainDiv" class="center">
            <h2>Reset your password</h2>
            <div>
                @Html.Label("Report your email to reset yout password")
                <div>@Html.TextBoxFor(x => x.Email, new { @placeholder = "Report your email" })</div>
            </div>
            <div>
                <input id="SendEmail" class="btn-secondary" value="Send"/> <!-- type="submit" --> <!-- asp-action="SendEmailToResetPassword"  -->
            </div>
        </div>

        <div id="resetPasswordDiv" class="center">
            <h2>Reset your password</h2>
            <div>
                @Html.LabelFor(x => x.Password)
                <div>@Html.TextBoxFor(x => x.Password)</div>
            </div>
            <div>
                @Html.Label("Confirm Password")
                <div>@Html.TextBoxFor(x => x.Password)</div>
            </div>
            <div>
                <input class="btn-primary" type="submit" />
            </div>
        </div>
    </body>
}

<script src="~/Scripts/LoginScripts/ForgotPasswordScripts.js" type="text/javascript"></script>
